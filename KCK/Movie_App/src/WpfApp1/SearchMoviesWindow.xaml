<Window x:Class="WpfApp1.SearchMoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Movies" Height="500" Width="900" Background="#F5F5F5" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
            <TextBox x:Name="SearchTextBox"
                     Width="600"
                     Height="30"
                     Margin="0,0,10,0"
                     Padding="10,5"
                     VerticalAlignment="Center"
                     FontSize="14"
                     TextChanged="SearchTextBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Search movies..."
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center"
                                                           FontSize="14"
                                                           Margin="15,0,0,0"
                                                           FontStyle="Italic"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button x:Name="SearchButton" 
                    Content="Search" 
                    Width="100" 
                    Height="30" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="SearchButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="MoviesDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  Background="White"
                  AlternatingRowBackground="#F9F9F9"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#DDDDDD"
                  HorizontalGridLinesBrush="#DDDDDD"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="3*"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="2*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding YearOfProduction}" Width="1*"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="AddToLikedButton"
                    Content="Add to Liked"
                    Width="150"
                    Height="40"
                    Background="#2196F3"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Click="AddToLikedButton_Click"/>
            <Button x:Name="AddToWatchlistButton"
                    Content="Add to Watchlist"
                    Width="150"
                    Height="40"
                    Background="#FF9800"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="AddToWatchlistButton_Click"/>
            <Button Name="BackButton" Content="Back" 
                     Background="#FFd9534f" 
                     Foreground="White" 
                     Width="150" 
                     Height="40" 
                    FontWeight="Bold"
                    Margin="150,0,0,0" 
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>