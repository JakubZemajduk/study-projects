<Window x:Class="WpfApp1.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login / Register"  Height="400" Width="400" Background="#f0f0f0" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TextBlock Text="Log in to Movie App!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,10,0,20"/>

        <TextBox Name="UsernameTextBox" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top" 
                 Margin="0,50,0,0" 
                 Width="300" 
                 Height="45"
                 Text="Username" 
                 Foreground="Gray" 
                 FontSize="14" 
                 GotFocus="UsernameTextBox_GotFocus" 
                 LostFocus="UsernameTextBox_LostFocus" 
                 BorderThickness="1" 
                 BorderBrush="#888" 
                 Padding="10"/>

        <PasswordBox Name="PasswordBox" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0,100,0,0" 
                     Width="300" 
                     Height="45"
                     Foreground="Gray" 
                     FontSize="14" 
                     GotFocus="PasswordBox_GotFocus" 
                     LostFocus="PasswordBox_LostFocus" 
                     BorderThickness="1" 
                     BorderBrush="#888" 
                     Padding="10"/>

        <Button Name="LoginButton" 
                Content="Login" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,60" 
                Width="120" 
                Height="40" 
                FontSize="14" 
                FontWeight="SemiBold"                
                Background= "#28a745"
                Foreground="White" 
                BorderThickness="0" 
                Click="LoginButton_Click" 
                Cursor="Hand"/>

        <Button Name="RegisterButton" 
                Content="Register" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,10" 
                Width="120" 
                Height="40" 
                FontSize="14" 
                FontWeight="SemiBold" 
                Background="#0078d7"  
                Foreground="White" 
                BorderThickness="0" 
                Click="RegisterButton_Click" 
                Cursor="Hand"/>
    </Grid>
</Window>